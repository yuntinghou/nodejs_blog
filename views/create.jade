include header
-var gender = {m : 'Male', f : 'Female', x : 'Unknown'}
.ui.grid
    .four.wide.column
        a(class="avatar" href="/posts?author=#{user._id}" data-title="#{user.name} | "+gender[user.gender] data-content="#{user.bio}")
            img(class="avatar" src="/img/#{user.avatar}")
    .eight.wide.column
        form(class="ui form segment" method="post" action="/posts")
            .field.required
                label Subject
                input(type="text" name="title")
            .field.required
                label Content
                textarea(name="content" rows="15")
            input(type="submit" class="ui button" value="Post")
include footer